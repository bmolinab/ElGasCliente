            <Style x:Key="NormalStyle"
                   TargetType="{x:Type Label}">
                <Setter Property="FontSize"
                        Value="{StaticResource MidMediumSize}" />
                <Setter Property="TextColor"
                        Value="{StaticResource BlackTextColor}" />
            </Style>
            
           <Style x:Key="SignUpTextStyle"
                   TargetType="{x:Type Label}">
                <Setter Property="FontSize"
                        Value="{StaticResource MidMediumSize}" />
                <Setter Property="TextColor"
                        Value="{StaticResource BlackTextColor}" />
            </Style>

            <Style x:Key="SignUpAccentTextStyle"
                   TargetType="{x:Type Label}"
                   BasedOn="{StaticResource SignUpTextStyle}">
                <Setter Property="TextColor"
                        Value="{StaticResource OrangeColor}" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
       
        <StackLayout Margin="20,10,10,10">  
            
            <Grid>
                 <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        
        <ColumnDefinition Width="*" />
                    
    </Grid.ColumnDefinitions>
                
                 <Image Source="UserBtn.png"
                    
                     Grid.Row = "0"
                    Grid.Column="0"
                    WidthRequest = "50"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                    >
                   <Image.GestureRecognizers>
                     <TapGestureRecognizer
                        Command="{Binding EditProfileCommand}"
                         
                    />
                   </Image.GestureRecognizers>
              </Image>
                
                  <Label
                      Grid.Row = "1"
                    Grid.Column="0"
                       Text="{Binding NombreUsuario}"
                       FontFamily="calibril.ttf#Calibri Light"
                       Style="{StaticResource SignUpAccentTextStyle}"
                       
                     HorizontalOptions="Center"
                    FontAttributes="Bold"
                    
                     FontSize = "Medium"
                  VerticalOptions="Center"
                   > 
                   <Label.GestureRecognizers>
                                
                   <TapGestureRecognizer
                         Command="{Binding EditProfileCommand}"
                         
                         NumberOfTapsRequired="1" 
                        
                    />
                    </Label.GestureRecognizers>
                   </Label>
    
                
            </Grid>
          
        
        
       <BoxView HeightRequest="1" WidthRequest="1" BackgroundColor="Gray"/> 
        
        
        
        <!--MEnU-->
        
   
            
            <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="40" />
        <ColumnDefinition Width="10" />
        <ColumnDefinition Width="Auto" />
                    
    </Grid.ColumnDefinitions>

 
                    
    <Image Source="SalirBtn.png"
                    
                     Grid.Row = "0"
                    Grid.Column="0"
                    WidthRequest = "24"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                    >
                   <Image.GestureRecognizers>
                     <TapGestureRecognizer
                        Command="{Binding LogoutCommand}"
                         
                    />
                   </Image.GestureRecognizers>
              </Image>
                
                 <Label
                      Grid.Row = "0"
                    Grid.Column="2"
                       Text="Salir"
                       FontFamily="calibril.ttf#Calibri Light"
                       Style="{StaticResource SignUpAccentTextStyle}"
                        x:Name="Login"
                     HorizontalOptions="Start"
                    
                     FontSize = "Medium"
                  VerticalOptions="Center"
                   > 
                   <Label.GestureRecognizers>
                                
                   <TapGestureRecognizer
                         Command="{Binding LogoutCommand}"
                         
                         NumberOfTapsRequired="1" 
                        
                    />
                    </Label.GestureRecognizers>
                   </Label>
                
                
                 <Image Source="AlarmBtn.png"
                    
                     Grid.Row = "1"
                    Grid.Column="0"
                    WidthRequest = "24"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                    >
                   <Image.GestureRecognizers>
                     <TapGestureRecognizer
                        Command="{Binding EditNotificationsCommand}"
                         
                    />
                   </Image.GestureRecognizers>
              </Image>
                
                 <Label
                      Grid.Row = "1"
                    Grid.Column="2"
                       Text="Notificaciones"
                       FontFamily="calibril.ttf#Calibri Light"
                       Style="{StaticResource SignUpAccentTextStyle}"
                        x:Name="Alarms"
                     HorizontalOptions="Start"
                    
                     FontSize = "Medium"
                  VerticalOptions="Center"
                   > 
                   <Label.GestureRecognizers>
                                
                   <TapGestureRecognizer
                         Command="{Binding EditNotificationsCommand}"
                         
                         NumberOfTapsRequired="1" 
                        
                    />
                    </Label.GestureRecognizers>
                   </Label>

   
      </Grid>
       
    </StackLayout>
            
