<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElGas.Pages.RegisterPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>

        <StackLayout Margin="3" Padding="3">

            <Entry  Placeholder="Correo" Keyboard="Email" FontFamily="calibril.ttf#Calibri Light"   Text="{Binding Username}" Margin="5,3,5,3"/>
            <Entry Text="{Binding Password}"  IsPassword="True"  Placeholder="Contraseña" Keyboard="Chat" FontFamily="calibril.ttf#Calibri Light"     Margin="5,3,5,3"/>
            <Entry Text="{Binding ConfirmPassword}" IsPassword="True"  Placeholder="Confirmar contraseña" Keyboard="Chat" FontFamily="calibril.ttf#Calibri Light"  Margin="5,3,5,3"/>
            <Button 
                        Text="Siguiente"
                        BackgroundColor="#0072C6"
                        TextColor="#FFFFFF"
                FontSize="Large"
                        BorderRadius="30"
 Margin="5,3,5,3"
                FontFamily="calibril.ttf#Calibri Light"
                Command="{Binding NextCommand}"
                />
        </StackLayout>
    </ContentPage.Content>    
</ContentPage>