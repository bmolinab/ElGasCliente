            <Style x:Key="NormalStyle"
                   TargetType="{x:Type Label}">
                <Setter Property="FontSize"
                        Value="{StaticResource MidMediumSize}" />
                <Setter Property="TextColor"
                        Value="{StaticResource BlackTextColor}" />
            </Style>
            
           <Style x:Key="SignUpTextStyle"
                   TargetType="{x:Type Label}">
                <Setter Property="FontSize"
                        Value="{StaticResource MidMediumSize}" />
                <Setter Property="TextColor"
                        Value="{StaticResource BlackTextColor}" />
            </Style>

            <Style x:Key="SignUpAccentTextStyle"
                   TargetType="{x:Type Label}"
                   BasedOn="{StaticResource SignUpTextStyle}">
                <Setter Property="TextColor"
                        Value="{StaticResource OrangeColor}" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            
            <tk:TKCustomMap HeightRequest="200"                 
                            Pins="{Binding Locations}" 
                            MapRegion="{Binding CenterSearch}"
                             IsClusteringEnabled="False"

></tk:TKCustomMap>

            <StackLayout Margin="15,15,15,45">
            <Label Text="¿Dónde lo entregamos?" 
                   HorizontalOptions="Center"
                   FontFamily="calibril.ttf#Calibri Light"
                   FontAttributes="Bold"
                   Style="{StaticResource SignUpTextStyle}"
                   >
            </Label>
            
             <Entry  Placeholder="Dirección" 
                    
                    FontFamily="calibril.ttf#Calibri Light"   
                    Text="{Binding Direccion}"
                     HeightRequest = "40"
                     
                     
            />
                
            <Entry  Placeholder="Agrega alguna referencia" 
                    
                    FontFamily="calibril.ttf#Calibri Light"   
                    Text="{Binding Referencia}"
                     HeightRequest = "40"
                     
                     
            />
            
            
            
           <!-- <Label Text="{Binding Direccion}" 
                   FontFamily="calibril.ttf#Calibri Light" 
                   FontSize="Large" FontAttributes="Bold" >
                
            </Label>-->

            <Label Text="¿Cuántos cilindros necesitas?" 
                   HorizontalOptions="Center"
                   FontFamily="calibril.ttf#Calibri Light"
                   FontAttributes="Bold"
                   Style="{StaticResource SignUpTextStyle}"
                   >
            </Label>
               
                <StackLayout Margin="15,15,15,15" 
                             HorizontalOptions="Center"
                             Orientation="Horizontal">
                    
                     <Button 
                        FontFamily="calibril.ttf#Calibri Light"
                        Text="-" 
                       
                        HorizontalOptions="Center" 
                        WidthRequest="50"  
                        HeightRequest="40" 
                        BackgroundColor="Red" 
                        
                       
                        Command="{Binding LessCommand}"
                        FontSize="Large"
                        
                        >
                        
            </Button>
                    
                 <Entry  Placeholder="0" 
                    
                    FontFamily="calibril.ttf#Calibri Light" 
                         FontSize="Large"
                     Text="{Binding Cilindros,Mode=TwoWay}"
                     HeightRequest = "40"
                     Keyboard="Numeric" 
                         WidthRequest="50"
                         HorizontalOptions="Center"
                         HorizontalTextAlignment="Center"
                   />
                    <Button 
                        FontFamily="calibril.ttf#Calibri Light"
                        Text="+" 
                       
                        HorizontalOptions="Center" 
                        WidthRequest="50"  
                        HeightRequest="40" 
                        BackgroundColor="Red" 
                        
                         
                        Command="{Binding PlusCommand}"
                        FontSize="Large"
                        
                        >
                        
            </Button>
                    
           
               </StackLayout>
                
                 <Label
                       Text="Confirmar el Pedido"
                       FontFamily="calibril.ttf#Calibri Light"
                       Style="{StaticResource SignUpAccentTextStyle}"
                        x:Name="Login"
                     HorizontalOptions="CenterAndExpand"
                     FontSize = "Medium"
                  VerticalOptions="FillAndExpand"
                   > 
                   <Label.GestureRecognizers>
                                
                   <TapGestureRecognizer
                         Command="{Binding OkCommand}"
                         
                         NumberOfTapsRequired="1" 
                        
                    />
                    </Label.GestureRecognizers>
                   </Label>
